<%= simple_form_for(@poll, :html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :question, :input_html => { :rows => 5 } %>
    <%= f.input :option_a, :input_html => { :rows => 5 } %>
    <%= f.input :option_b, :input_html => { :rows => 5 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
